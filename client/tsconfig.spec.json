{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "noEmit": true
  },
  "include": [
    "src/tests/**/*",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}